<h2>My tasks</h2>
<ul>
  <% @tasks.each do |task| %>
    <li>
    <% if task.completed? %>
          <i class="fa-regular fa-square-check"></i>
        <% else %>
          <i class="fa-regular fa-square"></i>
        <% end %>
    <%= link_to task.title, task_path(task) %>
    </li>
  <% end %>
</ul>

<%= link_to "New task", new_task_path  %>
